@model Account
@{
    var account = Model;
}
@if (account != null)
{
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 border-right">
                <form asp-action="UpdateProfile" method="post">
                    <div class="p-3 py-5">
                        <h4 class="text-center">Profile Settings</h4>
                        <div class="row mt-2">
                            <div class="col-md-12">
                                <label class="labels">Name</label>
                                <input type="text" class="form-control" name="Fullname"
                                       placeholder="Enter your full name"
                                       value="@account.Fullname"
                                       required
                                       oninvalid="this.setCustomValidity('Please enter your full name')"
                                       oninput="this.setCustomValidity('')">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="labels">Mobile Number</label>
                                <input type="tel" class="form-control" name="Phonenumber"
                                       placeholder="Enter your phone number"
                                       value="@account.Phonenumber"
                                       required
                                       pattern="^\d{10,11}$"
                                       oninvalid="this.setCustomValidity('Please enter a valid phone number (10–11 digits)')"
                                       oninput="this.setCustomValidity('')">
                            </div>
                            <div class="col-md-12">
                                <label class="labels">Email</label>
                                <input type="email" class="form-control" name="Email"
                                       placeholder="Enter your email"
                                       value="@account.Email"
                                       required
                                       oninvalid="this.setCustomValidity('Please enter a valid email')"
                                       oninput="this.setCustomValidity('')">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="labels">Birthdate</label>
                                <input type="date" class="form-control" name="birthdate"
                                       value="@Model.Birthdate"
                                       required
                                       oninvalid="this.setCustomValidity('Please enter your birthdate')"
                                       oninput="this.setCustomValidity('')">
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Gender</label>
                                <div class="form-control">
                                    <input type="radio" name="Gender" value="male" @(account.Gender == "male" ? "checked" : "")> Male
                                    <input type="radio" name="Gender" value="female" @(account.Gender == "female" ? "checked" : "")> Female
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary" type="submit">Save Profile</button>
                            <div style="color:red">@ViewBag.Message</div>
                        </div>
                    </div>

                </form>
            </div>

            <div class="col-md-6">
                <form asp-action="ChangePassword" method="post">
                    <div class="p-3 py-5">
                        <h4 class="text-center">Change Password</h4>
                        <div class="row">
                            <div class="col-md-12">
                                <label class="labels">Current Password</label>
                                <input type="password" class="form-control" name="CurrentPassword" placeholder="Enter current password">
                            </div>
                            <div class="col-md-12 mt-2">
                                <label class="labels">New Password</label>
                                <input type="password" class="form-control" name="NewPassword" placeholder="Enter new password">
                            </div>
                            <div class="col-md-12 mt-2">
                                <label class="labels">Confirm New Password</label>
                                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirm new password">
                            </div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                            <div style="color:red">@ViewBag.Message</div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
else
{
    <p class="text-danger text-center mt-5">You must login first!!!</p>
}
