@model List<Cart>

@{
    var productId = ViewBag.ProductId as int?;
    var variant = ViewBag.Var as int?;
    var message = ViewBag.Message as string;
}

<style>
    .cart_product img {
        width: 100px;
        height: auto;
        object-fit: contain;
        border-radius: 5px;
    }

    .cart_description h4 a {
        font-size: 14px;
        font-weight: 700;
        display: block;
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    input[type="checkbox"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
    }

</style>

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        <div style="color: red">@ViewBag.Message</div>
        <form method="post" asp-controller="Cart" asp-action="GoCheckout">
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td></td>
                            <td class="image">Item</td>
                            <td class="description"></td>
                            <td class="price">Price</td>
                            <td class="quantity">Quantity</td>
                            <td class="total">Total</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int? cartTotal = 0;
                        }
                        @foreach (Cart cart in Model)
                        {
                            string quantityId = $"quantity_{cart.Product.ProductId}";
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedProducts" value="@cart.VariantId" />
                                </td>
                                <td class="cart_product">
                                    <a href=""><img src="@cart.Product.Image" width="110" height="110" alt=""></a>
                                </td>
                                <td class="cart_description">
                                    <h4><a href="" style="font-size: 13px; font-weight: 800">@cart.Product.ProductName</a></h4>
                                    <p style="margin:0; font-size: 12px; color: #555;">
                                        Size: @(cart.Variant != null ? cart.Variant.Size : cart.Variant?.Size ?? "N/A")
                                    </p>
                                </td>
                                <td class="cart_price">
                                    <p>@cart.Product.UnitPrice₫</p>
                                </td>
                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        <a class="cart_quantity_up" href="/Cart/UpdateQuantity?productId=@cart.Product.ProductId&delta=1&var=@cart.VariantId"> + </a>
                                        <input id="@quantityId" class="cart_quantity_input" type="text" name="quantity" value="@cart.Quantity" autocomplete="off" size="2" readonly />
                                        <a class="cart_quantity_down" onclick="return confirmDeleteNoItem('@quantityId', this.href)" href="/Cart/UpdateQuantity?productId=@cart.Product.ProductId&delta=-1&var=@cart.VariantId"> - </a>
                                    </div>
                                </td>
                                <td class="cart_total">
                                    <p class="cart_total_price">@(cart.Product.UnitPrice* cart.Quantity)₫</p>
                                    <div style="display: none;">@(cartTotal += cart.Product.UnitPrice * cart.Quantity)</div>
                                </td>
                                <td class="cart_delete">
                                    <a class="cart_quantity_delete" onclick="return confirmDelete()" href="/Cart/DeleteItemInCart?productId=@cart.Product.ProductId">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>

                            <tr>
                                <td colspan="7" style="height: 25px;">
                                    @if (productId == cart.Product.ProductId && variant == cart.VariantId && !string.IsNullOrEmpty(message))
                                    {
                                        <span style="color: red; font-weight: bold;">@message</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model==null||Model.Count()==0)
            {
                <div class="text-end mt-3">
                    <button type="submit" class="btn btn-primary" disabled>Proceed to Checkout</button>
                </div>
            }
            else
            {
                <div class="text-end mt-3">
                    <button type="submit" class="btn btn-primary">Proceed to Checkout</button>
                </div>
            }
        </form>
    </div>
</section>

<script>
    function confirmDelete() {
        return confirm("Do you want to delete this item from your cart?");
    }

    function confirmDeleteNoItem(inputId, href) {
        const quantity = parseInt(document.getElementById(inputId).value);
        if (quantity === 1) {
            if (confirm("Quantity is 0. Do you want to remove this item from your cart?")) {
                window.location.href = href;
            }
            return false;
        }
        return true;
    }
</script>
