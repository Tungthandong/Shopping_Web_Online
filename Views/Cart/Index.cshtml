@model List<Cart>

@{
    var productId = ViewBag.ProductId as int?;
    var variant = ViewBag.Var as int?;
    var message = ViewBag.Message as string;
}

<style>
    .cart_product img {
        width: 100px;
        height: auto;
        object-fit: contain;
        border-radius: 5px;
        transition: transform 0.2s ease-in-out;
    }

        .cart_product img:hover {
            transform: scale(1.05);
        }

    .cart_description h4 a {
        font-size: 14px;
        font-weight: 700;
        display: block;
        max-width: 180px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #333;
        text-decoration: none;
    }

        .cart_description h4 a:hover {
            color: #e70303;
        }

    .cart_quantity_button a {
        padding: 5px 10px;
        background: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 4px;
        color: #333;
        margin: 0 2px;
        text-decoration: none;
        font-weight: bold;
    }

        .cart_quantity_button a:hover {
            background: #e70303;
            color: #fff;
        }

    .cart_quantity_input {
        text-align: center;
        width: 50px;
        border-radius: 4px;
        border: 1px solid #ddd;
        margin: 0 5px;
    }

    .cart_total_price {
        font-weight: bold;
        color: #e70303;
    }

    .cart_quantity_delete i {
        color: #e70303;
        font-size: 18px;
        transition: 0.2s;
    }

        .cart_quantity_delete i:hover {
            color: #000;
            transform: scale(1.2);
        }
</style>

<section id="cart_items" class="my-4">
    <div class="container">
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <form method="post" asp-controller="Cart" asp-action="GoCheckout">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th></th>
                            <th class="text-center">Item</th>
                            <th>Description</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int? cartTotal = 0;
                        }
                        @foreach (Cart cart in Model)
                        {
                            string quantityId = $"quantity_{cart.Product.ProductId}";
                            <tr>
                                <td class="text-center">
                                    <input type="checkbox" name="selectedProducts" value="@cart.VariantId" />
                                </td>
                                <td class="cart_product text-center">
                                    <a href="#"><img src="@cart.Product.Image" alt="@cart.Product.ProductName"></a>
                                </td>
                                <td class="cart_description">
                                    <h4><a href="#">@cart.Product.ProductName</a></h4>
                                    <p class="text-muted mb-0" style="font-size: 12px;">
                                        Size: @(cart.Variant != null ? cart.Variant.Size : "N/A")
                                    </p>
                                </td>
                                <td class="cart_price text-center">
                                    <p>@cart.Product.UnitPrice₫</p>
                                </td>
                                <td class="cart_quantity text-center">
                                    <div class="cart_quantity_button d-flex justify-content-center align-items-center">
                                        <a href="/Cart/UpdateQuantity?productId=@cart.Product.ProductId&delta=1&var=@cart.VariantId">+</a>
                                        <input id="@quantityId" class="cart_quantity_input" type="text" name="quantity" value="@cart.Quantity" readonly />
                                        <a onclick="return confirmDeleteNoItem('@quantityId', this.href)" href="/Cart/UpdateQuantity?productId=@cart.Product.ProductId&delta=-1&var=@cart.VariantId">-</a>
                                    </div>
                                </td>
                                <td class="cart_total text-center">
                                    <p class="cart_total_price">@(cart.Product.UnitPrice* cart.Quantity)₫</p>
                                    <div style="display: none;">@(cartTotal += cart.Product.UnitPrice * cart.Quantity)</div>
                                </td>
                                <td class="cart_delete text-center">
                                    <a onclick="return confirmDelete()" href="/Cart/DeleteItemInCart?productId=@cart.Product.ProductId&variantId=@cart.VariantId">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                            @if (productId == cart.Product.ProductId && variant == cart.VariantId && !string.IsNullOrEmpty(message))
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-danger fw-bold">
                                        @message
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <h5 class="fw-bold">Total: <span class="text-danger">@cartTotal₫</span></h5>
                <button type="submit" class="btn btn-dark px-4" @(Model == null || !Model.Any() ? "disabled" : "")>
                    Proceed to Checkout
                </button>
            </div>
        </form>
    </div>
</section>

<script>
    function confirmDelete() {
        return confirm("Do you want to delete this item from your cart?");
    }

    function confirmDeleteNoItem(inputId, href) {
        const quantity = parseInt(document.getElementById(inputId).value);
        if (quantity === 1) {
            if (confirm("Quantity is 0. Do you want to remove this item from your cart?")) {
                window.location.href = href;
            }
            return false;
        }
        return true;
    }
</script>
