<!-- Modal giống admin -->
<div id="orderModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white w-full max-w-2xl rounded-lg shadow-lg p-6 relative">
        <button id="closeModal" class="absolute top-3 right-3 text-gray-600 hover:text-black text-xl">
            &times;
        </button>
        <h2 class="text-lg font-semibold mb-4">Order Details</h2>
        <div id="orderDetailContent" class="text-sm text-gray-700"></div>
    </div>
</div>

<script>
    function showOrderDetail(order) {
        const modal = document.getElementById("orderModal");
        const content = document.getElementById("orderDetailContent");

        let html = `
            <p><strong>Date:</strong> ${order.OrderDate}</p>
            <p><strong>Total:</strong> ${order.TotalAmount} ₫</p>
            <p><strong>Ship Cost:</strong> ${order.ShipCost} ₫</p>
            <p><strong>Status:</strong> ${order.OrderStatus}</p>
            <h3 class="mt-4 font-semibold">Products:</h3>
            <table class="min-w-full text-sm mt-2 border">
                <thead class="bg-gray-100 text-gray-600">
                    <tr><th class="px-3 py-2">Product</th><th>Size</th><th>Quantity</th><th>Unit Price</th><th>Subtotal</th></tr>
                </thead>
                <tbody>`;

        order.OrderDetails?.forEach(p => {
            html += `<tr>
                        <td class="px-3 py-2">${p.Product?.ProductName ?? ''}</td>
                        <td>${p.Variant?.Size}</td>
                        <td>${p.Quantity}</td>
                        <td>${p.Product?.UnitPrice}</td>
                        <td>${(p.Quantity * p.Product.UnitPrice).toFixed(2)}</td>
                    </tr>`;
        });

        html += `</tbody></table>`;
        content.innerHTML = html;
        modal.classList.remove("hidden");
        modal.classList.add("flex");
    }

    document.getElementById("closeModal").onclick = () => {
        document.getElementById("orderModal").classList.add("hidden");
    };
</script>
