@using System.Linq
@model IEnumerable<Product>

@Html.Partial("_SliderPartial")

<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        <div style="color:red">@ViewBag.Message</div>
        @foreach (Product product in Model)
        {
            var message = Context.Request.Query["msg"].ToString();
            var error = Context.Request.Query["error"].ToString();
            int? productId = null;
            if (int.TryParse(Context.Request.Query["pid"], out var pidVal))
            {
                productId = pidVal;
            }
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductId">
                                <img src="@product.Image" alt="" width="255px" height="280px" />
                            </a>
                            <h2 style="color:#e70303;">@product.UnitPrice₫</h2>
                            <p style="font-size: 12.3px; font-weight: 500">@product.ProductName</p>
                            @{
                                var username = Context.Session.GetString("Username");
                                var returnUrl = Context.Request.Path + Context.Request.QueryString;
                            }
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="Username" value="@username" />
                                <input type="hidden" name="ProductId" value="@product.ProductId" />
                                <input type="hidden" name="Quantity" value="1" />
                                <input type="hidden" name="returnUrl" value="@returnUrl" />
                                <button type="submit" class="btn btn-default add-to-cart">
                                    <i class="fa fa-shopping-cart"></i>Add to cart
                                </button>
                            </form>
                        </div>
                    </div>
                    <div style="height: 20px; margin-top: 5px;">
                        @if (productId == product.ProductId)
                        {
                            if (!string.IsNullOrEmpty(message))
                            {
                                <span style="color:green; font-size: 14px;">@message</span>
                            }
                            else if (!string.IsNullOrEmpty(error))
                            {
                                <span style="color:red; font-size: 14px;">@error</span>
                            }
                        }
                    </div>


                </div>
            </div>
        }
    </div><!--features_items-->
    @Html.Partial("_LatestProductPartial")
</div>
@if (TempData["ShowWelcomeDialog"] != null && (bool)TempData["ShowWelcomeDialog"])
{
    <script>
        window.onload = function () {
            alert("🎉 Welcome! Your account has been created successfully. Please add more information.");
            window.location.href = '/Account/Index';
        }
    </script>
}