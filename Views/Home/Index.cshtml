@using System.Linq
@model IEnumerable<Product>
<style>
    /* Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

        .modal.hidden {
            display: none;
        }

    /* Nội dung modal */
    .modal-content {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        position: relative;
    }

    /* Nút đóng */
    .modal .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 28px;
        cursor: pointer;
    }
</style>
@Html.Partial("_SliderPartial")

<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        <div style="color:red">@ViewBag.Message</div>
        @foreach (Product product in Model)
        {
            var message = Context.Request.Query["msg"].ToString();
            var error = Context.Request.Query["error"].ToString();
            int? productId = null;
            if (int.TryParse(Context.Request.Query["pid"], out var pidVal))
            {
                productId = pidVal;
            }
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductId">
                                <img src="@product.Image" alt="" width="255px" height="280px" />
                            </a>
                            <h2 style="color:#e70303;">@product.UnitPrice₫</h2>
                            <p style="font-size: 12.3px; font-weight: 500">@product.ProductName</p>
                            @{
                                var username = Context.Session.GetString("Username");
                                var returnUrl = Context.Request.Path + Context.Request.QueryString;
                            }
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="Username" value="@username" />
                                <input type="hidden" name="ProductId" value="@product.ProductId" />
                                <input type="hidden" name="Quantity" value="1" />
                                <input type="hidden" name="returnUrl" value="@returnUrl" />
                                <button type="submit" class="btn btn-default add-to-cart">
                                    <i class="fa fa-shopping-cart"></i>Add to cart
                                </button>
                            </form>
                            <!-- Nút mở modal -->
                            <button type="button" class="btn btn-default add-to-cart" onclick="openModal(@product.ProductId)">
                                <i class="fa fa-shopping-cart"></i> Liên hệ đặt hàng
                            </button>

                            <!-- Modal riêng cho từng sản phẩm -->
                            <div id="contactModal-@product.ProductId" class="modal hidden">
                                <div class="modal-content">
                                    <span class="close" onclick="closeModal(@product.ProductId)">&times;</span>

                                    <h3 class="text-center font-bold mb-3">LIÊN HỆ TƯ VẤN, BÁO GIÁ</h3>

                                    <form action="/submit-contact" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="ProductId" value="@product.ProductId" />
                                        <input type="hidden" name="ProductName" value="@product.ProductName" />

                                        <div class="form-group">
                                            <input type="text" name="FullName" placeholder="Họ và tên *" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input type="tel" name="Phone" placeholder="Số điện thoại *" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="Email" placeholder="Email *" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input type="number" name="Quantity" placeholder="Số lượng cần tư vấn *" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <input type="file" name="File" required class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <textarea name="Note" placeholder="Nội dung thiết kế (càng chi tiết càng tốt)" rows="4" required class="form-control"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-danger btn-block">
                                            NHẬN BÁO GIÁ NGAY →
                                        </button>
                                    </form>
                                </div>
                            </div>
                         </div>
                    </div>
                    <div style="height: 20px; margin-top: 5px;">
                        @if (productId == product.ProductId)
                        {
                            if (!string.IsNullOrEmpty(message))
                            {
                                <span style="color:green; font-size: 14px;">@message</span>
                            }
                            else if (!string.IsNullOrEmpty(error))
                            {
                                <span style="color:red; font-size: 14px;">@error</span>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div><!--features_items-->
    @Html.Partial("_LatestProductPartial")
</div>
@if (TempData["ShowWelcomeDialog"] != null && (bool)TempData["ShowWelcomeDialog"])
{
    <script>
        window.onload = function () {
            alert("🎉 Welcome! Your account has been created successfully. Please add more information.");
            window.location.href = '/Account/Index';
        }
    </script>
}
<script>
    function openModal(productId) {
        document.getElementById("contactModal-" + productId).classList.remove("hidden");
    }
    function closeModal(productId) {
        document.getElementById("contactModal-" + productId).classList.add("hidden");
    }
</script>

