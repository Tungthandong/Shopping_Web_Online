
<style>
    /* Ẩn mũi tên mặc định */
    #slider-carousel .owl-nav {
        position: absolute;
        top: 50%;
        width: 100%;
        transform: translateY(-50%);
        display: flex;
        justify-content: space-between;
        pointer-events: none;
        opacity: 0; /* Ẩn đi */
        transition: opacity 0.3s ease;
    }

    /* Chỉ hiện khi hover vào slider */
    #slider-carousel:hover .owl-nav {
        opacity: 1;
    }
    #slider {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    #slider-carousel .item {
        position: relative;
        height: 500px; /* chỉnh chiều cao ở đây */
        overflow: hidden;
    }

        #slider-carousel .item img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* crop ảnh cho đều khung */
        }

    /* Style mũi tên */
    #slider-carousel .owl-nav {
        position: absolute;
        top: 50%;
        width: 100%;
        transform: translateY(-50%);
        display: flex;
        justify-content: space-between;
        pointer-events: none; /* tránh che click */
    }

        #slider-carousel .owl-nav button {
            background: #FFA633;
            color: #fff;
            font-size: 40px;
            border: none;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            pointer-events: auto; /* cho phép click */
            transition: background 0.3s ease;
        }

            #slider-carousel .owl-nav button:hover {
                background: rgba(0,0,0,0.7);
            }

</style>
<section id="slider">
    <div id="slider-carousel" class="owl-carousel owl-theme">
        <div class="item">
            <img src="~/images/banner1.png" alt="Banner 1" />
        </div>
        <div class="item">
            <img src="~/images/Twitter-Banner-V3-1280x330.jpg" alt="Banner 2" />
        </div>
        <div class="item">
            <img src="~/images/Print-On-Demand-Viet-Nam-8.png" alt="Banner 3" />
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#slider-carousel").owlCarousel({
            items: 1,              // hiển thị 1 ảnh
            loop: true,            // lặp vô hạn
            autoplay: true,        // tự động chạy
            autoplayTimeout: 4000, // thời gian chuyển slide
            nav: true,             // bật mũi tên
            dots: false,           // tắt chấm tròn
            navText: [
                '<i class="fa fa-angle-left"></i>',
                '<i class="fa fa-angle-right"></i>'
            ]
        });
    });
</script>
